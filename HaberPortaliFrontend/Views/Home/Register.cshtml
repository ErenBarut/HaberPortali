<main>
    <form>
        
        <div data-mdb-input-init class="form-outline mb-4">
            <input type="username" id="txtUserName" class="form-control" />
            <label class="form-label" for="txtUserName">Kullanýcý adý</label>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <input type="text" id="txtFullname" class="form-control" />
            <label class="form-label" for="txtFullname">Ýsim Soyisim</label>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <input type="email" id="txtEmail" class="form-control" />
            <label class="form-label" for="txtEmail">E-posta</label>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <input type="text" id="txtPhoneNumber" class="form-control" />
            <label class="form-label" for="txtPhoneNumber">Telefon Numarasý</label>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <input type="password" id="txtPassword" class="form-control" />
            <label class="form-label" for="txtPassword">Þifre</label>
        </div>
        <div id="divResult"></div>
        <!-- Submit button -->
        <button type="button" id="btnRegister" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Kayýt ol</button>
        <div id="divResult">

        </div>
    </form>
    
