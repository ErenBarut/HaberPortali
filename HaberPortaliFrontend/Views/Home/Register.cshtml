<script>
    $(document).ready(function () {
        var ApiUrl = "https://localhost:7033/api/User/Add";
        $("#btnRegister").click(function () {

            var username = $("#txtUserName").val();
            var fullName = $("#txtFullname").val();
            var email = $("#txtEmail").val();
            var phoneNumber = $("#txtPhoneNumber").val();
            var password = $("#txtPassword").val();

            // if (username == "" || password == "" || fullName = "" || email = "" || phoneNumber = "") {
            //     $("#divResult")
            //         .show()
            //         .removeClass()
            //         .addClass("alert alert-danger")
            //         .html("Tüm Alanlarý Doldurunuz!")
            //         .fadeOut(5000);
            //     return false;
            // }
            var register = new Object();
            register.id = Math.floor(Math.random() * 10000).toString();
            register.userName = username;
            register.fullName = fullName;
            register.email = email;
            register.phoneNumber = phoneNumber;
            register.password = password;

            console.log("Id: ", register.id)

            $.ajax({
                url: ApiUrl,
                method: "POST",
                data: JSON.stringify(register),
                contentType: "application/json",
                success: function (data) {
                    if (data.status) {
                        console.log(data);
                        $("#divResult")
                            .show()
                            .removeClass()
                            .addClass("alert alert-success")
                            .html("Baþarýyla kayýt olundu")
                            .fadeOut(3000);
                            location.href = "/Home/Login"
                    
                    } else {
                        $("#divResult")
                            .show()
                            .removeClass()
                            .addClass("alert alert-danger")
                            .html(data.message)
                            .fadeOut(3000);

                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        });

    });
</script>